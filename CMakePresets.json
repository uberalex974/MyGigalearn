{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "ninja-relwithdebinfo",
      "displayName": "Ninja RelWithDebInfo (MSVC x64)",
      "description": "Configure with Ninja generator, MSVC x64 toolchain, RelWithDebInfo.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CUDA_FLAGS": "--allow-unsupported-compiler",
        "CMAKE_CUDA_FLAGS_INIT": "--allow-unsupported-compiler"
      }
    }
  ]
}
